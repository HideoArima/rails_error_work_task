<% provide(:title, @user.name) %>

<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-bordered">
      <tr>
        <th><%= Task.human_attribute_name :id %></th>
        <td><%= @task.id %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name :name %></th>
        <td><%= @task.name %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name :description %></th>
        <td><%= simple_format(h(@task.description), {}, sanitize: false, wrapper_tag: "div") %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name :created_at %></th>
        <td><%= l(@task.created_at, format: :long) %></td>
      </tr>
      <tr>
        <th><%= Task.human_attribute_name :updated_at %></th>
        <td><%= l(@task.updated_at, format: :long) %></td>
      </tr>
    </table>
    <div class="pull-right">
      <%= link_to "編集", edit_user_task_path(@user, @task), class: "btn btn-success" %>
      <%= link_to "削除", user_task_path(@user, @task), method: :delete,
      data: { confirm: "「#{@task.name}」を削除します。よろしいですか？" }, class: "btn btn-danger" %>
    </div>
  </div>    
</div>